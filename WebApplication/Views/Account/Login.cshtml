@using WApp.ViewModels
@model Login

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_UnautorizeLayout.cshtml";
}

<main class="main-content  mt-0">
    <section>
        <div class="page-header min-vh-75">
            <div class="container">
                <div class="row">
                    <div class="col-xl-5 col-lg-5 col-md-6 d-flex flex-column mx-auto">
                        <div class="card card-plain mt-8">
                            <div class="card-header pb-0 text-left bg-transparent">
                                <h3 class="font-weight-bolder text-info text-gradient">Welcome back</h3>
                                <p class="mb-0">Enter your email and password to sign in</p>
                            </div>
                            <div class="card-body">
                                <form asp-action="Login" method="post" class="form-horizontal">
                                    <label>Username</label>
                                    <div class="mb-3">
                                        <input asp-for="Username" class="form-control" placeholder="Username" aria-label="Username" aria-describedby="email-addon">
                                        <span asp-validation-for="Username" class="text-danger"></span>
                                    </div>
                                    <label>Password</label>
                                    <div class="mb-3">
                                        <input asp-for="Password" type="password" class="form-control" placeholder="Password" aria-label="Password" aria-describedby="password-addon">
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>
                                    <div class="form-check form-switch">
                                        <input asp-for="RememberMe" class="form-check-input" type="checkbox" checked="">
                                        <label class="form-check-label" for="rememberMe">Remember me</label>
                                    </div>
                                    <div class="text-center">
                                        <button type="submit" class="btn bg-gradient-info w-100 mt-4 mb-0">Sign in</button>
                                    </div>
                                </form>
                            </div>
                            <div class="card-footer text-center pt-0 px-lg-2 px-1">
                                <p class="mb-4 text-sm mx-auto">
                                    Don't have an account?
                                    <a asp-action="Register" class="text-info text-gradient font-weight-bold">Sign up</a>
                                </p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <img src="https://upload.wikimedia.org/wikipedia/commons/6/6e/Lambang_Polri.png" style="position: absolute;z-index: 99;opacity: 0.9;padding-top: 100px;">
                        <div class="oblique position-absolute top-0 h-100 d-md-block d-none me-n8">
                            <div class="bg-gradient-info oblique-image bg-cover position-absolute fixed-top ms-auto h-100 z-index-0 ms-n6"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>
