@using WApp.ViewModels
@model SatuanKerjaViewModel

<div class="card">
    <div class="card-header pb-0">
        <div class="">
            <div class="my-auto mt-lg-0 mt-4">
                <form asp-action="CreateEditSatuanKerja" method="post" class="my-auto">
                    <input asp-for="Id" type="hidden" />
                    <h5 class="font-weight-bolder">Edit Unit Kerja</h5>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="col-md-3 control-label">Unit Kerja *</label>
                                <div class="col-md-9">
                                    <select asp-items="Model.UnitKerjas" asp-for="UnitKerjaID" class="form-control select input" data-live-search="true">
                                        <option></option>
                                    </select>
                                    <span asp-validation-for="UnitKerjaID" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-3 control-label">Name *</label>
                                <div class="col-md-9">
                                    <input asp-for="Name" class="form-control input" placeholder="Name" />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="form-check form-switch">
                                    <input asp-for="IsActive" class="form-check-input" type="checkbox">
                                    <label class="form-check-label" for="rememberMe">Active</label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <hr b-f9qln7o7lm="" class="horizontal dark mt-0">
                    @await Html.PartialAsync("_ActionButtons", ("SatuanKerja", "Master"))   
                </form>
            </div>
        </div>
    </div>
</div>