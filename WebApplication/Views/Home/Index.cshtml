@using WApp.ViewModels
@model DashboardViewModel

<div class="row" style="padding-bottom: 20px;">
    <div class="col-xl-4 col-sm-6 mb-xl-0 mb-4 pb-3">
        <div class="card">
            <div class="card-body p-3">
                <div class="row mb-3">
                    <div class="col-8">
                        <div class="numbers">
                            <p class="text-sm mb-0 text-capitalize font-weight-bold">Registred K-II</p>
                            <h5 class="font-weight-bolder mb-0">
                                @Model.TotalK2.ToString("N0") Data(s)
                                <span class="text-success text-sm font-weight-bolder">(Aktif: @Model.TotalK2Aktif.ToString("N0"))</span>
                            </h5>
                        </div>
                    </div>
                    <div class="col-4 text-end">
                        <div class="icon icon-shape bg-gradient-primary shadow text-center border-radius-md">
                            <i class="fa fa-user text-lg opacity-10" aria-hidden="true"></i>
                        </div>
                    </div>
                </div>
                <hr b-f9qln7o7lm="" class="horizontal dark my-sm-1">
                <div class="row">
                    <div>
                        <div class="d-flex flex-column h-100" style="text-align: center;">
                            <a asp-action="K2" asp-controller="Pegawai" class="text-body text-sm font-weight-bold mb-0 icon-move-right mt-auto">
                                K-II Details
                                <i class="fas fa-arrow-right text-sm ms-1" aria-hidden="true"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-4 col-sm-6 mb-xl-0 mb-4">
        <div class="card">
            <div class="card-body p-3">
                <div class="table-responsive">
                    <table class="table align-items-center mb-0">
                        <thead>
                            <tr>
                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Pendidikan</th>
                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Total</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.K2Pendidikan.OrderByDescending(m => m.Text))
                            {

                                <tr>
                                    <td>
                                        <div class="d-flex px-2 py-1">
                                            <div class="d-flex flex-column justify-content-center">
                                                <h6 class="mb-0 text-sm">@item.Text</h6>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="align-middle text-center text-sm">
                                        <span class="text-xs font-weight-bold"> @item.Total </span>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    @foreach (var item in Model.K2JenisKelamin.OrderByDescending(m => m.Text))
    {
        <div class="col-xl-2 col-sm-6 mb-xl-0 mb-4">
            <div class="card">
                <div class="card-body p-3">
                    <div class="row">
                        <div class="col-8">
                            <div class="numbers">
                                <p class="text-sm mb-0 text-capitalize font-weight-bold">@item.Text</p>
                                <h5 class="font-weight-bolder mb-0">
                                    @item.Total
                                </h5>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }    
</div>
