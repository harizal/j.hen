<div class="row mt-4">
    <div class="col-lg-12 mb-lg-0 mb-4">
        <div class="card">
            <div class="card-body p-3 col-lg-12">
                <div class="row mb-3">
                    <div>
                        <label>NIK/No Registrasi</label>
                        <div>
                            <input id="nik" class="form-control" placeholder="NIK/No Registrasi" aria-label="NIK/No Registrasi" aria-describedby="email-addon">
                        </div>
                        <label>Nama</label>
                        <div>
                            <input id="noRegistrasi" class="form-control" placeholder="Nama" aria-label="Nama">
                        </div>
                        <div class="text-center">
                            <button type="button" class="btn bg-gradient-info w-100 mt-4 mb-0" onClick="Search()"><i class="fa fa-search"></i> Search</button>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-6">
                        <div class="d-flex flex-column h-100">
                            <a asp-action="Search" asp-controller="Home" class="text-body text-sm font-weight-bold mb-0 icon-move-right mt-auto">
                                Search More
                                <i class="fas fa-arrow-right text-sm ms-1" aria-hidden="true"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

