<ul class="breadcrumb">
    <li><a asp-action="Index" asp-controller="Home">Home</a></li>
    <li class="active">List PHL</li>
</ul>

<div class="page-content-wrap">
    <div class="row">
        <div class="col-md-12">
            <div class="form-horizontal">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title"><strong>Filter</strong></h3>
                        <ul class="panel-controls">
                            <li><a href="#" class="panel-collapse"><span class="fa fa-angle-down"></span></a></li>
                        </ul>
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-md-6">                               
                                <div class="form-group">
                                    <label class="col-md-3 control-label">NIK</label>
                                    <div class="col-md-9">
                                        <input id="nik" type="text" class="form-control" />
                                    </div>
                                </div>                                
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="col-md-3 control-label">Name</label>
                                    <div class="col-md-9">
                                        <input id="name" type="text" class="form-control" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="panel-footer">
                        <button class="btn btn-default" id="clearForm" onClick="ClearForm()"><i class="fa fa-refresh"></i>Clear Form</button>
                        <button class="btn btn-primary pull-right" onClick="Search()"><i class="fa fa-search"></i>Submit</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <!-- START DEFAULT DATATABLE -->
            <div class="panel panel-default">
                <div class="panel-body">
                    <a asp-action="CreatePHL" asp-controller="Pegawai" class="btn btn-primary"><span class="fa fa-plus"></span> Add New</a>
                    <table id="tableData" class="table display">
                        <thead>
                            <tr>
                                <th></th>
                                <th>NIK</th>
                                <th>NAME</th>
                                <th>JENIS KELAMIN</th>
                                <th>PENDIDIKAN</th>
                                <th>PRODI</th>
                                <th>SATUAN KERJA</th>
                                <th>UNIT KERJA</th>
                                <th>AWAL KERJA</th>
                                <th>AKHIR KERJA</th>
                                <th>KETERANGAN</th>
                                <th>STATUS</th>                                
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <script>
        var datatable = null;
        $(document).ready(function () {
            bindDatatable();
        });
        function bindDatatable() {
            datatable = $('#tableData')
                .DataTable({
                    ajax: {
                        url: "/Pegawai/GetPHL",
                        type: "POST",
                        async: true,
                        data: function (data) {
                            data.additionalValues = [$("#nik").val(), $("#name").val()];
                            return data;
                        }
                    },
                    "language": {
                        'processing': '<i class="fa fa-spinner fa-spin fa-3x fa-fw"></i><span class="sr-only">Loading...</span>'
                    },
                    "columns": [
                        {
                            "data": "id",
                            "width": "100px",
                            "render": function (data, type, row, meta) {
                                var editUrl = "/Pegawai/EditPHL/" + data;
                                return `<div style="text-align: center;">
                                                            <a href="${editUrl}" style="margin-right: 5px;" class="label label-warning"><span class="fa fa-pencil"></span></a>
                                                                    <a href="javascript:void(0)" data-id="${row.id}" class="deleteDatas label label-danger"><span class="fa fa-trash-o"></span></a>
                                                                        </div>`
                            }
                        },
                        {
                            "data": "nik",
                        },
                        {
                            "data": "name",
                        },
                        {
                            "data": "jenisKelaminText",
                        },
                        {
                            "data": "pendidikanText",
                        },
                        {
                            "data": "prodiText",
                        },
                        {
                            "data": "satuanKerjaText",
                        },
                        {
                            "data": "unitKerjaText",
                        },
                        {
                            "data": "tanggalAwal",
                        },
                        {
                            "data": "tanggalAkhir",
                        },
                        {
                            "data": "keterangan",
                        },
                        {
                            "data": "isActive",
                            "width": "50px",
                            "render": function (data, type, row, meta) {
                                return data ? "<span class='label label-success'>Active</span>" : "<span class='label label-danger'>Non Active</span>"
                            }
                        },
                        
                    ],
                    serverSide: true,
                    searching: false,
                    ordering: false,
                    scrollX: true,
                    drawCallback: function (settings) {
                        initDelete(".deleteDatas");
                    }
                });
        }

        function ClearForm() {
            $("#nik").val('');
            $("#name").val('');
        }

        function Search() {
            datatable.ajax.reload();
        }

        var initDelete = function (selector) {
            $(selector).on('click', function () {
                var btn = $(this);
                var id = btn.attr("data-id");

                ShowConfimDelete(datatable, "/Pegawai/DeletePHL/" + id)
            });
        }

    </script>
